<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_login_bg">

    <LinearLayout
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_sim"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>

            <TextView
                    android:layout_marginTop="14dp"
                    android:textColor="#6D7173"
                    android:textSize="12sp"
                    android:text="SIM卡"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
                android:layout_marginTop="22dp"
                android:layout_marginRight="27dp"
                android:layout_marginLeft="27dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_login_auth"
                android:layout_width="27dp"
                android:layout_height="24dp"/>


        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_login_logo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>

            <TextView
                    android:layout_marginTop="14dp"
                    android:textColor="#6D7173"
                    android:textSize="12sp"
                    android:text="澳雷古雅"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


    <View
            android:layout_marginTop="53dp"
            android:layout_marginLeft="59dp"
            android:layout_marginRight="59dp"
            android:background="#F0F2F2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    <LinearLayout
            android:layout_marginRight="59dp"
            android:layout_marginLeft="52dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <FrameLayout
                android:id="@+id/unified_argument_btn"
                android:padding="7dp"
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.yu.common.ui.DelayClickImageView
                    android:id="@+id/unified_argument"
                    android:background="@drawable/ic_check_box_selector"
                    android:layout_width="13dp"
                    android:layout_height="13dp"/>

        </FrameLayout>

        <TextView
                android:text="登录即同意《服务与隐私协议》，并授权澳雷 古雅获取本机号码"
                android:layout_marginTop="22dp"
                android:id="@+id/login_agreement"
                android:textColor="#1A1A1A"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <com.yu.common.ui.DelayClickTextView
            android:id="@+id/what_is_avoid_close_login"
            android:layout_marginTop="16dp"
            android:textColor="@color/app_main_color"
            android:textSize="12sp"
            android:layout_marginLeft="59dp"
            android:textColorHint="@color/app_main_color"
            android:text="什么是免密登录？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.yu.common.ui.DelayClickTextView
            android:id="@+id/login"
            android:background="@drawable/shape_button_bg"
            android:text="确认授权"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:layout_width="258dp"
            android:layout_height="44dp"/>


    <LinearLayout
            android:paddingBottom="32dp"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.yu.common.ui.DelayClickTextView
                android:id="@+id/problem"
                android:textColor="#1A1A1A"
                android:textSize="12sp"
                android:text="登录遇到问题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.yu.common.ui.DelayClickTextView
                android:id="@+id/normal_login"
                android:layout_marginLeft="35dp"
                android:textColor="#1A1A1A"
                android:textSize="12sp"
                android:text="常规方式登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>